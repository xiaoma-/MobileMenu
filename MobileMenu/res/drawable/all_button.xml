<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:endColor="#F2BF55" android:startColor="#F2BF55" />

            <stroke android:width="0.5dp" android:color="#B7B7B7" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
        
    </item>
    <item>
        <shape>
            <solid android:color="#D37102" />

            <stroke android:width="0.5dp" android:color="#B7B7B7" />

            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
        </shape>
       
    </item>

</selector>