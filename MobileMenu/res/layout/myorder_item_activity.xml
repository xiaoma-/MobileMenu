<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/order_food_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:gravity="left"
        android:text="大龙虾 ×1"
        android:textStyle="bold"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/order_food_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/order_food_counts"
        android:layout_below="@+id/order_food_counts"
        android:gravity="left"
        android:text="500/份"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/order_food_weidao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/order_food_price"
        android:layout_alignBottom="@+id/order_food_price"
        android:layout_toRightOf="@+id/order_food_price"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:text="口味（默认）"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/myorder_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/myorder_delete"
        android:layout_marginRight="21dp"
        android:layout_toLeftOf="@+id/myorder_delete"
        android:src="@drawable/order_edit" />

    <ImageView
        android:id="@+id/myorder_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/order_food_counts"
        android:src="@drawable/order_delete" />

    <TextView
        android:id="@+id/order_food_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/order_food_counts"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/order_food_counts"
        android:gravity="left"
        android:text="(大份)"
        android:textColor="#005098"
        android:textSize="12dp" />

</RelativeLayout>