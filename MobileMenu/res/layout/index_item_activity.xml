<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants" >

        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp" >

            <ImageView
                android:id="@+id/index_food_big"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="bottom"
                android:background="#a0000000" >

                <TextView
                    android:id="@+id/food_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/food_shop_img"
                    android:ellipsize="marquee"
                    android:gravity="right"
                    android:paddingBottom="5dip"
                    android:paddingTop="5dip"
                    android:singleLine="true"
                    android:layout_marginRight="3dp"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignRight="@+id/food_price"
                    android:layout_alignTop="@+id/food_shop_img"
                    android:ellipsize="marquee"
                    android:gravity="right"
                    android:paddingTop="3dip"
                    android:layout_marginRight="3dp"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/food_shop_img"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:focusable="false"
                    android:padding="3dip"
                    android:paddingTop="2dip"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/shoping_white" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>